{
  "name": "retext-diacritics",
  "version": "2.0.0",
  "description": "retext plugin to check for proper use of diacritics",
  "license": "MIT",
  "keywords": [
    "unified",
    "retext",
    "plugin",
    "diacritic",
    "loan",
    "words"
  ],
  "repository": "retextjs/retext-diacritics",
  "bugs": "https://github.com/retextjs/retext-diacritics/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
    "Sylvan Swierkosz <sswierkosz@gmail.com>"
  ],
  "files": [
    "schema.js",
    "index.js"
  ],
  "dependencies": {
    "match-casing": "^1.0.0",
    "nlcst-search": "^1.0.0",
    "nlcst-to-string": "^2.0.0",
    "quotation": "^1.0.1",
    "unist-util-position": "^3.0.0"
  },
  "devDependencies": {
    "browserify": "^16.0.0",
    "mdast-zone": "^3.0.0",
    "nyc": "^14.0.0",
    "prettier": "^1.0.0",
    "remark-cli": "^6.0.0",
    "remark-preset-wooorm": "^5.0.0",
    "retext": "^6.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.0.0",
    "unist-builder": "^1.0.0",
    "xo": "^0.24.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-bundle": "browserify . -s retextDiacritics > retext-diacritics.js",
    "build-mangle": "browserify . -s retextDiacritics -p tinyify > retext-diacritics.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "rules": {
      "guard-for-in": "off"
    },
    "ignores": [
      "retext-diacritics.js"
    ]
  },
  "remarkConfig": {
    "settings": {
      "paddedTable": false
    },
    "plugins": [
      "preset-wooorm",
      [
        "lint-table-pipe-alignment",
        false
      ],
      "./script/table"
    ]
  }
}
